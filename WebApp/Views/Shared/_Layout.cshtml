<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="">
                    Class Management
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="display: none;" id="dashboardTeacherNavItem">
                            <a class="nav-link text-white" asp-area="" asp-controller="Dashboard" asp-action="Teacher">
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item" style="display: none;" id="dashboardAdminNavItem">
                            <a class="nav-link text-white" asp-area="" asp-controller="Dashboard" asp-action="Admin">
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item" style="display: none;" id="classManagerNavItem">
                            <a class="nav-link text-white" asp-area="" asp-controller="Class" asp-action="Index">
                                Classes
                            </a>
                        </li>
                        <li class="nav-item" style="display: none;" id="studentManagerNavItem">
                            <a class="nav-link text-white" asp-area="" asp-controller="Student" asp-action="Index">
                                Students
                            </a>
                        </li>
                        <li class="nav-item" style="display: none;" id="centerManagerNavItem">
                            <a class="nav-link text-white" asp-area="" asp-controller="Center" asp-action="Index">
                                Centers
                            </a>
                        </li>
                        <li class="nav-item" style="display: none;" id="userManagerNavItem">
                            <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Index">
                                Users
                            </a>
                        </li>
                        <li class="nav-item" style="display: none;" id="attendanceNavItem">
                            <a class="nav-link text-white" asp-area="" asp-controller="Attendance" asp-action="Manage">
                                Attendance
                            </a>
                        </li>
                        <li class="nav-item" style="display: none;" id="timesheetCreateNavItem">
                            <a class="nav-link text-white" asp-area="" asp-controller="Timesheet" asp-action="Create">
                                Timesheet Create
                            </a>
                        </li>
                        <li class="nav-item" style="display: none;" id="timesheetEditNavItem">
                            <a class="nav-link text-white" asp-area="" asp-controller="Timesheet" asp-action="Edit">
                                Timesheet Edit
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#" onclick="Auth.logout(); return false;">
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/config.js"></script>
    <script src="~/js/auth.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function() {
            const userRole = Auth.getRole();
            console.log(userRole);
            
            if (userRole) {
                if (userRole === 'Student') {
                }
                else if(userRole === 'Admin') {
                    $('#userManagerNavItem').show();
                    $('#centerManagerNavItem').show();
                    $('#dashboardAdminNavItem').show();
                }
                else if(userRole === 'Teacher') {
                    $('#classManagerNavItem').show();
                    $('#attendanceNavItem').show();
                    $('#studentManagerNavItem').show();
                    $('#dashboardTeacherNavItem').show();
                    $('#timesheetCreateNavItem').show();
                    $('#timesheetEditNavItem').show();
                }
            } else {
                Auth.logout();
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
