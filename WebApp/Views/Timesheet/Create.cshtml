@{
    ViewData["Title"] = "Create Timesheet";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h2>Create New Session</h2>
            <p class="text-muted mb-0">Schedule a new class session.</p>
        </div>
        <div class="col text-end">
            <a class="btn btn-outline-secondary" href="/Class/Index">
                Back to Classes
            </a>
        </div>
    </div>

    <div id="alertContainer"></div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form id="timesheetForm">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="classId" class="form-label">Class</label>
                        <select id="classId" class="form-select" required>
                            <option value="">Select class</option>
                        </select>
                        <div class="form-text">Only classes you have access to are listed.</div>
                    </div>
                    <div class="col-md-3">
                        <label for="startTime" class="form-label">Start time</label>
                        <input type="datetime-local" id="startTime" class="form-control" required>
                    </div>
                    <div class="col-md-3">
                        <label for="endTime" class="form-label">End time</label>
                        <input type="datetime-local" id="endTime" class="form-control" required>
                    </div>
                    <div class="col-md-8">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" id="title" class="form-control" maxlength="100" required placeholder="Eg: Introduction to ASP.NET Core">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label d-block">Mode</label>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="isOnline">
                            <label class="form-check-label" for="isOnline">Online session</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <label for="description" class="form-label">Description (optional)</label>
                        <textarea id="description" class="form-control" rows="4" maxlength="500" placeholder="Key topics, notes, or materials to prepare"></textarea>
                    </div>
                </div>
                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary" id="saveBtn">
                        Create
                    </button>
                    <button type="reset" class="btn btn-outline-secondary">Reset</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/api-helper.js" asp-append-version="true"></script>
    <script src="~/js/timesheet-create.js" asp-append-version="true"></script>
}
